{
    "name": "nova-language",
    "displayName": "Nova Language Extension by tw4",
    "description": "Full language support for Nova programming language with auto-completion, hover documentation, and error checking (.nova files)",
    "version": "0.2.0",
    "publisher": "tw4",
    "author": "tw4",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/tw4/nova-lang.git"
    },
    "homepage": "https://github.com/tw4/nova-lang",
    "bugs": {
        "url": "https://github.com/tw4/nova-lang/issues"
    },
    "keywords": [
        "nova",
        "programming",
        "language",
        "syntax",
        "highlighting"
    ],
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "nova",
                "aliases": [
                    "Nova",
                    "nova"
                ],
                "extensions": [
                    ".nova"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "nova",
                "scopeName": "source.nova",
                "path": "./syntaxes/nova.tmLanguage.json"
            }
        ]
    },
    "main": "./extension.js",
    "activationEvents": [
        "onLanguage:nova"
    ],
    "scripts": {
        "compile": "cd server && npm install && npm run compile",
        "postinstall": "cd server && npm install"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0"
    }
}